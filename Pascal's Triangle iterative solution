class Solution:
    def getRow(self, rowIndex: int) -> List[int]:
        pascalsTriangle = [[1]]
        for i in range(1, rowIndex+1):
            row = []
            for j in range(0, i+1):  # Adjusted inner loop boundary
                left = j - 1
                right = j

                if left < 0:  # Adjusted condition
                    numGen = pascalsTriangle[i-1][0]  # Referenced the previous row
                    row.append(numGen)
                elif right >= len(pascalsTriangle[i-1]):  # Adjusted condition
                    numGen = pascalsTriangle[i-1][left]  # Referenced the previous row
                    row.append(numGen)
                else:
                    numGen = pascalsTriangle[i-1][left] + pascalsTriangle[i-1][right]  # Corrected the indices
                    row.append(numGen)
            pascalsTriangle.append(row)  # Moved this inside the outer loop

        return pascalsTriangle[rowIndex]
